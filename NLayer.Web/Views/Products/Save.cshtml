@{
}
@model ProductDTO
<h1>Save Products</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Save" method="post" asp-controller="Products">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"/>
            </div>
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control" ></select> @*kapatma tagını açık tutmamız gerekiyor.*@
                <span asp-validation-for="Price" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary"/>
            </div>
        </form>
    </div>
</div>